extends /../component/layout/default

append body
  -
    var headerContent = [
      {link:'blog', title:'Blog Posts'},
      {link:'https://github.com/easa/staticpug/issues/new', title:'Add New Issue'}
    ]

  .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
    h5.my-0.mr-md-auto.font-weight-normal #{companyName}
    nav.my-2.my-md-0.mr-md-3
      each item in headerContent
        a.p-2.text-dark(href=item.link)= item.title

    a.btn.btn-outline-primary(href='#') Sign up
  
  .container
    .pricing-header.px-3.py-3.pt-md-5.pb-md-4.mx-auto.text-center
      h1.display-4 Pricing
      p.lead
        | Welcome to homepage of your website. In order to see your blog posts, please click on 
        a(href='blog') Blog Posts
        | ! and to make new issue on statigpug, please click on 
        a(href='https://github.com/easa/staticpug/issues/new') Add New Issue
        | ! Quickly build your static weblog effective and completely free. 
        | It's easy to manage your content this way, simply by adding a markdown file on github.
        | If you have further question, don't hesitate to contact us. 
        | there is a simple pricing table for your potential customers with this Bootstrap example. It's built with default Bootstrap components and utilities with little customization.
    .container
      .card-deck.mb-3.text-center
        each card in cards 
          include /../component/card.pug
        
    footer.pt-4.my-md-5.pt-md-5.border-top
      .row
        .col-12.col-md
          img.mb-2(src='https://getbootstrap.com/assets/brand/bootstrap-solid.svg', alt='', width='24', height='24')
          small.d-block.mb-3.text-muted Â© #{year}
        .col-6.col-md
          h5 Features
          ul.list-unstyled.text-small
            li
              a.text-muted(href='#') Cool stuff
            li
              a.text-muted(href='#') Random feature
            li
              a.text-muted(href='#') Team feature
            li
              a.text-muted(href='#') Stuff for developers
            li
              a.text-muted(href='#') Another one
            li
              a.text-muted(href='#') Last time
        .col-6.col-md
          h5 Resources
          ul.list-unstyled.text-small
            li
              a.text-muted(href='#') Resource
            li
              a.text-muted(href='#') Resource name
            li
              a.text-muted(href='#') Another resource
            li
              a.text-muted(href='#') Final resource
        .col-6.col-md
          h5 About
          ul.list-unstyled.text-small
            li
              a.text-muted(href='#') Team
            li
              a.text-muted(href='#') Locations
            li
              a.text-muted(href='#') Privacy
            li
              a.text-muted(href='#') Terms